<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_delete"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/show_password_dialoge"
    >

    <TextView
        android:id="@+id/delete_conf"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="Do you really want to delete your account?"
        android:textAppearance="@style/do_you_logout"
        />

    <LinearLayout
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        >

        <TextView
            android:id="@+id/delete_yes_button"
            android:layout_width="127dp"
            android:layout_height="42dp"
            android:text="@string/yes"
            android:textAppearance="@style/ok"
            android:gravity="center"
            android:background="@drawable/dialogue_left"
            android:textColor="@color/black"
            />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <TextView
            android:id="@+id/delete_no_button"
            android:layout_width="127dp"
            android:layout_height="42dp"
            android:text="@string/no"
            android:textAppearance="@style/ok"
            android:gravity="center"
            android:background="@drawable/dialogue_right"
            />

    </LinearLayout>


</LinearLayout>
