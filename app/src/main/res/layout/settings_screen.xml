<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context="SettingsActivity">


    <include layout="@layout/top_bar_back"/>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        android:layout_centerVertical="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/setting"
            android:style="@style/setting"
            android:fontFamily="@font/interbold"
            android:paddingLeft="50dp"
            >

        </TextView>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TableRow>
                <Spinner

                    android:id="@+id/my_spinner_screen_mode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/screen_mode_options"
                    android:layout_marginTop="200dp"
                    android:spinnerMode="dropdown"/>
            </TableRow>
            <TableRow>
                <Spinner

                    android:id="@+id/my_spinner_language"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/language_options"
                    android:spinnerMode="dropdown"/>
            </TableRow>
            <TableRow>



                <Spinner
                    android:id="@+id/screen_mode_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:entries="@array/screen_mode_options"
                    android:spinnerMode="dropdown" />

            </TableRow>



        </TableLayout>

    </LinearLayout>


        <LinearLayout
            android:layout_marginTop="300dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
                <TextView
                    android:id="@+id/about_uss"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:layout_marginStart="24dp"
                    android:text="@string/about_us"
                    android:textAppearance="@style/TextAppearance.AppCompat.Large"
                    android:textColor="#B0B0B0" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_marginTop="400dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="24dp"
            android:text="@string/about_us_details"
            android:textAppearance="@style/TextAppearance.AppCompat.Small"
            android:textColor="#B0B0B0" />
    </LinearLayout>









</RelativeLayout>
