                android:contentDescription="@string/character5" />

            <ImageButton
                android:id="@+id/character6"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_8"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character6" />

            <ImageButton
                android:id="@+id/character7"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_9"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character7" />

            <ImageButton
                android:id="@+id/character8"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_10"
