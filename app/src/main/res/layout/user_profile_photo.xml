<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!-- Top Bar -->
    <include layout="@layout/top_bar_back" />


    <!-- User Profile Photo and Lines -->
    <RelativeLayout
        android:id="@+id/user_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp">
        <!-- Left Line -->
        <View
            android:id="@+id/line_2"
            android:layout_width="150dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/user_main_photo_chose"
            android:background="@drawable/user_profile_left_line" />
        <!-- User Profile Photo -->
        <View
            android:id="@+id/user_main_photo_chose"
            android:layout_width="112dp"
            android:layout_height="112dp"
            android:layout_centerInParent="true"
            android:background="@drawable/user_profile_photo" />
        <!-- Right Line -->
        <View
            android:id="@+id/line_3"
            android:layout_width="150dp"
            android:layout_height="8dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/user_main_photo_chose"
            android:background="@drawable/user_profile_right_line" />
        <View
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/user_main_photo_chose"
            android:layout_alignEnd="@id/user_main_photo_chose"
            android:background="@drawable/user_profile_camera_icon" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_container"
        android:layout_centerHorizontal="true"
        android:gravity="right"
        android:orientation="vertical"
        >
        <!-- Character Buttons Grid -->
        <GridLayout
            android:id="@+id/character_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:rowCount="6"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <!-- Example Character Buttons -->
            <ImageButton
                android:id="@+id/character1"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_2"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character1"
                />

            <ImageButton
                android:id="@+id/character2"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_4"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character2" />

            <ImageButton
                android:id="@+id/character3"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
