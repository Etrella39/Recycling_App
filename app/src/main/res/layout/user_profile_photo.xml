            <ImageButton
                android:id="@+id/character19"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_19"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character19" />

            <ImageButton
                android:id="@+id/character20"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="8dp"
                android:background="@drawable/user_profile_photo_20"
                android:scaleType="centerCrop"
                android:contentDescription="@string/character20" />

            <!-- Add more ImageButtons here for other characters -->
        </GridLayout>

        <TextView
            android:id="@+id/delete_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/show_password_ok_button"
            android:layout_marginEnd="30dp"
            android:text="@string/photo_delete"
            android:gravity="center"
            android:textAppearance="@style/waste_record"
            />

    </LinearLayout>
</RelativeLayout>
