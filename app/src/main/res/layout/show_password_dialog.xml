<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/show_password_"
    android:layout_width="match_parent"
    android:layout_height="198dp"
    android:clipToOutline="true"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:background="@drawable/find_password_show_passwo"
    >

    <TextView
        android:id="@+id/your_password_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:text="@string/your_passwo"
        android:textAppearance="@style/your_passwo"
        android:fontFamily="@font/interbold"
        />

    <include
        android:layout_width="266dp"
        android:layout_height="42dp"
        android:layout_marginTop="18dp"
        layout="@layout/box_password" />

    <RelativeLayout
        android:id="@+id/find_button"
        android:layout_width="83dp"
        android:layout_height="36dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="16dp"
        android:gravity="center"
        android:background="@drawable/show_password_ok_button">

        <TextView
            android:id="@+id/ok_but"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            android:textAppearance="@style/ok"
            android:fontFamily="@font/interbold"
            />
    </RelativeLayout>
</LinearLayout>
