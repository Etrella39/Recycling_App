<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="8dp"
    >
    <LinearLayout
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:paddingHorizontal="2dp"
        android:background="@drawable/setting_toggle_background3"
        >
        <TextView
            android:id="@+id/toggle_mode_light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Light"
            android:textAppearance="@style/toggle_text"
            android:lineSpacingExtra="32sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/interbold"
            android:paddingStart="16dp"
            android:background="@drawable/setting_toggle_one"
            />
        <TextView
            android:id="@+id/toggle_mode_dark"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Dark"
            android:textAppearance="@style/toggle_text"
            android:lineSpacingExtra="32sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/interbold"
            android:paddingStart="16dp"
            android:background="@drawable/setting_toggle_one"
            />
        <TextView
            android:id="@+id/toggle_mode_system"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="System"
            android:textAppearance="@style/toggle_text"
            android:lineSpacingExtra="32sp"
            android:gravity="center_vertical"
            android:fontFamily="@font/interbold"
            android:paddingStart="16dp"
            android:background="@drawable/setting_toggle_one"
            />
    </LinearLayout>
</RelativeLayout>