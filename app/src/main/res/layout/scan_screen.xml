<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <!-- Top Bar -->
    <include layout="@layout/top_bar_back" />

    <!-- Camera Simulation -->
    <ImageView
        android:id="@+id/camera_simulation"
        android:layout_width="match_parent"
        android:layout_height="555dp"
        android:layout_below="@id/top_bar_back"
        android:layout_above="@id/bottom_controls"
        android:src="@drawable/scan_screen_camera_simulation"
        android:scaleType="centerCrop" />

    <!-- Bottom Controls -->
    <RelativeLayout
        android:id="@+id/bottom_controls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:paddingBottom="20dp">

        <!-- Capture Button -->
        <ImageView
            android:id="@+id/capture_button"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"

            android:layout_marginTop="15dp"
            android:background="@drawable/scan_screen_camera_button"
             />

        <!-- Change Direction Button -->
        <ImageView
            android:id="@+id/change_direction_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="50dp"
            android:src="@drawable/scan_screen_change_diraction_icon"
             />
    </RelativeLayout>

</RelativeLayout>
