<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_alignParentBottom="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:background="@color/navigation_bar"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:id="@+id/blogs_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:background="@color/navigation_bar"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="10dp"
            >
            <ImageView
                android:id="@+id/web_design"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:background="@drawable/main_icon_web"
                />
            <TextView
                android:id="@+id/blogs"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:lineHeight="22sp"
                android:lineSpacingExtra="10sp"
                android:text="@string/blogs"
                android:textAppearance="@style/Main_Disable"
                android:translationY="-4.95sp"
                />

        </LinearLayout>


        <View
            android:layout_width="98dp"
            android:layout_height="84dp"
            />

        <LinearLayout
            android:id="@+id/profile_button"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="84dp"
            android:background="@color/navigation_bar"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingRight="10dp"

            >
            <ImageView
                android:id="@+id/customer"
                android:layout_width="51dp"
                android:layout_height="51dp"
                android:background="@drawable/main_icon_customer"
                />
            <TextView
                android:id="@+id/profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal|top"
                android:lineHeight="22sp"
                android:lineSpacingExtra="10sp"
                android:text="@string/profile"
                android:textAppearance="@style/Main_Disable"
                android:translationY="-4.95sp" />

        </LinearLayout>




    </LinearLayout>

    <RelativeLayout
        android:id="@+id/main_button"
        android:layout_width="98dp"
        android:layout_height="98dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/main_button"
        >

        <ImageView
            android:id="@+id/trashcan_image"
            android:layout_width="56.98dp"
            android:layout_height="56.98dp"
            android:layout_centerInParent="true"
            android:background="@drawable/main_icon_trashcan"
            />
    </RelativeLayout>


</RelativeLayout>