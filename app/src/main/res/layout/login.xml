<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/login_scr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToOutline="true"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="60dp">

        <TextView
            android:id="@+id/login"
            android:layout_width="86dp"
            android:layout_height="54dp"
            android:fontFamily="@font/interbold"
            android:gravity="center_horizontal|top"
            android:lineSpacingExtra="15sp"
            android:text="@string/login"
            android:textAppearance="@style/login"
            android:translationY="-7.64sp" />

        <RelativeLayout
            android:id="@+id/id_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="69dp"
            android:background="@drawable/id_box">

            <!-- ID TextView -->
            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="36sp"
                android:text="@string/id"
                android:textAppearance="@style/id" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/password_bo"
            android:layout_width="266dp"
            android:layout_height="42dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/password_bo">

            <!-- Password TextView -->
            <TextView
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="36sp"
                android:text="@string/password"
                android:textAppearance="@style/password" />

            <!-- Password icon View -->
            <View
                android:id="@+id/password_icon"
                android:layout_width="12.5dp"
                android:layout_height="7.5dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="156dp"
                android:layout_toEndOf="@id/password"
                android:background="@drawable/password_icon" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/log_in"
            android:layout_width="266dp"
            android:layout_height="42dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/login_butto">

            <!-- ID TextView -->
            <TextView
                android:id="@+id/log_in_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="100dp"
                android:gravity="center_vertical"
                android:lineSpacingExtra="36sp"
                android:text="@string/log_in"

                android:textAppearance="@style/log_in" />
        </RelativeLayout>

        <!-- New LinearLayout to group find password and sign up TextViews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/find_passwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="@string/find_passwo"
                android:textAppearance="@style/find_passwo" />

            <TextView
                android:id="@+id/sign_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:gravity="center"
                android:lineSpacingExtra="10sp"
                android:text="@string/sign_up"
                android:textAppearance="@style/sign_up" />
        </LinearLayout>

        <TextView
            android:id="@+id/some_id"
            android:layout_width="126dp"
            android:layout_height="54dp"
            android:layout_marginTop="70dp"
            android:gravity="center_horizontal|center_vertical"
            android:lineSpacingExtra="30sp"
            android:text="@string/some_id"
            android:textAppearance="@style/some_id" />

        <!-- New LinearLayout for social media icon buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/google_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/google_icon"
                android:contentDescription="@string/google_button" />

            <ImageButton
                android:id="@+id/naver_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/naver_icon"
                android:contentDescription="@string/naver_button" />

            <ImageButton
                android:id="@+id/kakaotalk_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="16dp"
                android:background="@drawable/kakaotalk_icon"
                android:contentDescription="@string/kakaotalk_button" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
